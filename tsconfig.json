{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "rootDir": "packages",
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "lib": [
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./packages",
        "paths": {
            "@rigor-database/*": [
                "./rigor-database/src/*"
            ],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}